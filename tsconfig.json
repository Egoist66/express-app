{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",       // Файлы будут копироваться с сохранением структуры
    "rootDir": "./",          // Корень проекта (теперь включает `src/`)
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "baseUrl": "./"           // Опционально: для правильного разрешения путей
  },
  "include": ["src/**/*", "middlewares/**/*"],
  "exclude": ["node_modules", "dist"]
}